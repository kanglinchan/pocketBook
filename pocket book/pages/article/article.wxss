/* pages/article/article.wxss */

view.configur-bar{
    display:flex;
    justify-content: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    background-color: rgba(42, 140, 255, 0.9);
    align-items: flex-end;
    transform: translateY(400px);
}

view.configur-bar view.configur-item{
    flex-grow: 1;
    text-align: center;
}

view.configur-bar image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: bottom;
}

view.configur-bar view.configur-item {
    font-size: 32rpx;
    line-height: 1.8em;
    color: white;
}

view.page_margin{
    margin: 20rpx;
}

page,view.page{
    height: 100%;
}

scroll-view.content{
  height: 100%;
   width: 100%;
}