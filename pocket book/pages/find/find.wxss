.banner-container{
    height:350rpx; 
    background:#2a8cff; 
    padding-top: 10rpx;
}
view[class^="banner-item"]{
    position: absolute;
    width: 700rpx;
    height: 350rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

view[class^="banner-item"] img{
    width: 100%;
    background-position-y: center;
}

.banner-item-1{
    background: red;
    transform: translateX(-632.5rpx) scale(.85,0.85);
}
.banner-item-2{
    background: blue;
    transform: translateX(25rpx) scale(1);
}
.banner-item-3{
    background: green;
    transform:scaleY(0.85) scaleX(0.85);
    left: 682.5rpx;
    
}

.search{
    background:#2a8cff; 
    padding:  10rpx 25rpx;
}
.search input{
    background: white;
    height: 70rpx;
    border-radius: 10rpx;
    padding:0 70rpx;
    
}
.search-placeholer{
    color: #8e8e8e;
}

.search:before{
    content: "";
    display: block;
    position: absolute;
    width: 70rpx;
    height: 70rpx;
    z-index: 10;
    background-position:15rpx,center;
    background-size: 40rpx 40rpx;
    background-repeat: no-repeat;
    background-image: url("data:image/png;base64,");
}


page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 10px;
}

.weui-tab{
    height: auto;
}


image.slide-image{
    width: 750rpx;
}